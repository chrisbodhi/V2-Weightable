<li id="<%= feed_item.id %>">
  <%= link_to image_tag(feed_item.user.image_url(:thumb).to_s), feed_item.user %>
    <span class="user">
      <%= link_to feed_item.user.name, feed_item.user %>
    </span>
    <span class="content"><%= feed_item.content %></span>
    <%= image_tag(feed_item.weighinpic_url(:thumb).to_s) %>
    <span class="timestamp">
      Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
    </span>
  <% if current_user?(feed_item.user) && feed_item.created_at.to_a[3..5] == Time.now.to_a[3..5] %>
    <%= link_to "delete", feed_item, method: :delete,
                              data: { confirm: "You sure?" },
                              title: feed_item.content %>
  <% end %>
</li>